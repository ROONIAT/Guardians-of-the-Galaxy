<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane id="loginPane" prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../CSS/1.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.LoginMenu">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Login Menu" styleClass="title" />
            <Text text="Login if you have registered" styleClass="subtitle" />
            <TextField fx:id="username" maxWidth="200" promptText="Your Username" />
            <PasswordField fx:id="password" maxWidth="200" promptText="Your Password" />
            <HBox alignment="CENTER" spacing="15">
                <Button onMouseClicked="#login" text="Login" styleClass="button" />
                <Button onMouseClicked="#back" text="Back" styleClass="button" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
