<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.RegisterMenu"
            id="registerPane"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@../CSS/1.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Register Menu" styleClass="title" />
            <Text text="Please fill in the details to register" styleClass="subtitle" />
            <TextField fx:id="username" maxWidth="200" promptText="Your Username" />
            <PasswordField fx:id="password" maxWidth="200" promptText="Your Password" />
            <PasswordField fx:id="passConfirm" maxWidth="200" promptText="Confirm Password" />
            <HBox alignment="CENTER" spacing="15">
                <Button onMouseClicked="#register" text="Register" styleClass="button" />
                <Button onMouseClicked="#back" text="Back" styleClass="button" />
            </HBox>
        </VBox>
    </center>


</BorderPane>
